<%# Our "base" layout should be a valid HTML document. %>
<!DOCTYPE html>
<html>
  <head>
    <title>WeMeet</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <%= stylesheet_link_tag 'application', 'media' => 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <%# These classes come from the Bootstrap CSS framework. %>
    <%# TODO: add nav bars here %>
    <nav class="navbar navbar-expand-lg bg-primary text-white mb-3">
      <h1 class="title">WeMeet!</h1>
      <ul class="nav navbar-nav">
          <li>
            <%= link_to "Home", events_path %>
          </li>
          <li>
            <%= link_to "Post Event", new_event_path %>
          </li>
          <li>
            <%= link_to "My Events", myEvents_path(@username) %>
          </li>
          <li>
            <%= link_to "Advanced Search", search_path %>
          </li>
          <li>
            <%= form_tag search_result_path, method: :get, id: 'search_form_nav' do %>
              <%= text_field_tag :q, params[:q], size: 25, placeholder: "Search event/host/attendee name" %>
              <%= submit_tag "Search", class: "btn btn-primary", id: "search_btn_nav" %>
            <% end %>
          </li>
          <li>
            <%= link_to "Log in/Sign up", events_path %>
          </li>
      </ul>
    </nav>
    <div class="container">
    <%# Render "flash" messages in our application. This loads _flash.erb %>
    <%= render 'layouts/flash' %>
    <main id="main">
      <%= yield %>
    </main>
  </div>
</body>
</html>
