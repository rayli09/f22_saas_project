<%= form_for [@event, Comment.build] do |f| %>
    <div class="container">
      <div class="form-group">
        <%= f.label :content %>
        <%= f.text_area :content, class: "form-control" %>
      </div>
  
      <div class="form-group">
        <%= f.submit "Submit comment", class: "btn btn-primary" %>
      </div>
    </div>
<% end %>