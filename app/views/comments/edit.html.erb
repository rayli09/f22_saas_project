<h2>Edit Comment</h2>

<%= form_tag event_comment_path(@event, @comment), :method => :put do %>
  <%= label :comment, :content, 'Content', :class => 'col-form-label' %>
  <%= text_field :comment, :content, :class => 'form-control' %>
  <%= submit_tag 'Update Comment', :class => 'btn btn-primary' %>
  <%= link_to 'Cancel', event_path(@event), :class => 'btn btn-secondary' %>
<% end %>