<!--  This file is app/views/events/new.html.erb -->
<h2>Post New Event</h2>
<div class='col-8'>
<%= form_tag events_path, :class => 'form' do %>
  <div class="row">
    <div class="col-md-6">
      <%= label :event, :title, 'Title', :class => 'col-form-label' %>
      <%= text_field :event, :title, :class => 'form-control' %>
      <br>
      <%= label :event, :event_time, 'Event Time', :class => 'col-form-label'  %>
      <%= date_select :event, :event_time, {}, :class => 'form-control col-2 d-inline' %>
      <br>
      <%= label :event, :attendee_limit, 'Maximum Number of Attendees', :class => 'col-form-label'  %>
      <%= text_field :event, :attendee_limit, :class => 'form-control' %>
      <%= label :event, :description, 'Event Description', :class => 'col-form-label'  %>
      <%= text_field :event, :description, :class => 'form-control' %>
      <%= label :event, :category, 'Event Category', :class => 'col-form-label' %>
      <br>
      <%= select :event, :category, [ "Food","Entertainment","Sports","Academic","Other"], {}, {:class => 'form-control col-1'} %>
      <br>
    </div>
  </div>
  <br/>
  <%= submit_tag 'Post Event', :class => 'btn btn-primary' %>
  <%= link_to 'Cancel', events_path, :class => 'btn btn-outline-secondary' %>
<% end %>
</div>
